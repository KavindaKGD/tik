<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailsFragment"
    android:id="@+id/scrollviewDetailsframelayout">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollviewDetails">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/scrollviewDetailslayout">

            <ImageButton
                android:id="@+id/detailFragBackImgBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@android:drawable/ic_media_rew" />

            <TextView
                android:id="@+id/detailFragTxtViewTopic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/topic" />

            <TextView
                android:id="@+id/detailFragTxtViewTopicDb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/textbox"
                android:text="TextView" />

            <TextView
                android:id="@+id/detailFragTxtViewDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/details" />

            <EditText
                android:id="@+id/detailFragEditTxtViewDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/textbox"
                android:ems="10"
                android:gravity="start|top"
                android:inputType="textMultiLine" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/date" />

            <EditText
                android:id="@+id/detailFragEditTxtViewDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="date" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/time" />

            <EditText
                android:id="@+id/detailFragEditTxtViewTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="time" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/pLevel" />

            <TextView
                android:id="@+id/detailFragTxtViewPLevel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/detailFragBtnEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Edit" />

            <Button
                android:id="@+id/detailFragBtnDelete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Delete" />

            <Button
                android:id="@+id/detailFragBtnDone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Already Done" />

        </LinearLayout>
    </ScrollView>

</FrameLayout>